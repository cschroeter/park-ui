---
import { Stack } from 'styled-system/jsx'
import {
  AuthenticationCard,
  CardWithTabs,
  ECommerceCard,
  NotificationCard,
  PaymentCard,
  PricingCard,
  ReportIssueCard,
  ShareDocumentCard,
} from './showcase'
---

<Stack gap={{ base: '6', lg: '8' }} direction="row">
  <Stack gap={{ base: '6', lg: '8' }} maxW="sm">
    <AuthenticationCard client:load />
    <NotificationCard client:load />
    <PricingCard client:load />
  </Stack>
  <Stack gap={{ base: '6', lg: '8' }} maxW="md">
    <PaymentCard client:load />
    <ECommerceCard client:load />
  </Stack>
  <Stack gap={{ base: '6', lg: '8' }} maxW="sm">
    <ShareDocumentCard client:load />
    <ReportIssueCard client:load />
    <CardWithTabs client:load />
  </Stack>
</Stack>
