---
import { Code } from 'astro/components'
import fs from 'fs'
import { CodePreview } from './code-preview'
const recipeName = Astro.params.slug?.split('/').pop()
const code = fs.readFileSync(`../packages/presets/src/theme/recipes/${recipeName}.ts`, 'utf8')
---

<CodePreview code={code} client:load>
  <Code code={code} lang="tsx" theme="css-variables" />
</CodePreview>
