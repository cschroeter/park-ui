---
import {
  SiAstro,
  SiGatsby,
  SiNextdotjs,
  SiNuxtdotjs,
  SiSolid,
} from '@icons-pack/react-simple-icons'
import { Flex, Grid, Stack } from 'styled-system/jsx'
import { Text } from './ui/text'

const frameworks = [
  { name: 'Next.js', icon: SiNextdotjs, slug: 'react/next-js' },
  { name: 'Astro', icon: SiAstro, slug: 'react/astro' },
  { name: 'Gatsby', icon: SiGatsby, slug: 'react/gatsby' },
  { name: 'Solid', icon: SiSolid, slug: 'solid/vite' },
  { name: 'Nuxt', icon: SiNuxtdotjs, slug: 'vue/nuxt' },
]
---

<Grid gap={{ base: '4', md: '6' }} minChildWidth="7rem" className="not-prose">
  {
    frameworks.map(({ name, icon: Icon, slug }) => (
      <a
        href={'https://stackblitz.com/github/cschroeter/park-ui/tree/main/examples/' + slug}
        target="_blank"
      >
        <Flex
          borderRadius="l3"
          borderWidth="1px"
          p="4"
          bg="bg.default"
          align="center"
          justify="center"
        >
          <Stack gap="2.5">
            <Icon size="48" />
            <Text textStyle="sm" textAlign="center">
              {name}
            </Text>
          </Stack>
        </Flex>
      </a>
    ))
  }
</Grid>
