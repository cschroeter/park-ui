{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "type"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "JSON Schema reference URL"
    },
    "name": {
      "type": "string",
      "description": "The name of the registry item"
    },
    "type": {
      "type": "string",
      "enum": ["registry:block", "registry:component", "registry:recipe", "registry:ui"],
      "description": "The type of registry item"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categories this item belongs to"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "NPM package dependencies"
    },
    "description": {
      "type": "string",
      "description": "Description of the registry item"
    },
    "devDependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "NPM dev dependencies"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "path", "content"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["registry:block", "registry:component", "registry:recipe", "registry:ui"],
            "description": "The type of file"
          },
          "path": {
            "type": "string",
            "description": "The file path"
          },
          "content": {
            "type": "string",
            "description": "The file content"
          }
        }
      },
      "description": "Files associated with this registry item"
    },
    "panda": {
      "type": "object",
      "properties": {
        "extension": {
          "description": "Panda CSS extension configuration"
        }
      },
      "description": "Panda CSS specific configuration"
    },
    "registryDependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Dependencies on other registry items"
    }
  },
  "additionalProperties": false
}
