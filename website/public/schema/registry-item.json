{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RegistryItem",
  "type": "object",
  "required": ["id", "type"],
  "definitions": {
    "RegistryItemType": {
      "type": "string",
      "enum": ["block", "component", "recipe", "slotRecipe", "theme"],
      "description": "The type of the item. This is used to determine the type and target path of the item when resolved for a project"
    },
    "JsonValue": {
      "anyOf": [
        { "type": "string" },
        { "type": "number" },
        { "type": "boolean" },
        { "type": "null" },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/JsonValue" }
        },
        {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/JsonValue" }
        }
      ]
    },
    "ModuleDeclaration": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "named"
            },
            "symbols": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "isType": {
                    "type": "boolean"
                  }
                },
                "required": ["name"],
                "additionalProperties": false
              }
            }
          },
          "required": ["type", "symbols"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "namespace"
            },
            "as": {
              "type": "string"
            }
          },
          "required": ["type", "as"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "object-literal"
            },
            "variableName": {
              "type": "string"
            },
            "properties": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["key"],
                "additionalProperties": false
              }
            }
          },
          "required": ["type", "variableName", "properties"],
          "additionalProperties": false
        }
      ]
    },
    "IndexFile": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "The path to the index file"
        },
        "exports": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ModuleDeclaration"
          },
          "description": "Defines the module exports available from this index file"
        },
        "imports": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ModuleDeclaration"
          },
          "description": "Defines the module imports required by this index file"
        }
      },
      "required": ["path"],
      "additionalProperties": false
    }
  },
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "default": "https://next.park-ui.com/schema/registry-item.json"
    },
    "id": {
      "type": "string",
      "description": "The id of the item. This is used to identify the item in the registry. It should be unique for your registry"
    },
    "type": {
      "$ref": "#/definitions/RegistryItemType"
    },
    "description": {
      "type": "string",
      "description": "The description of the item. This is used to provide a brief overview of the item"
    },
    "name": {
      "type": "string",
      "description": "The human-readable name for your registry item. Keep it short and descriptive"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "An array of NPM dependencies required by the registry item"
    },
    "devDependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "An array of NPM dev dependencies required by the registry item"
    },
    "registryDependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "An array of registry items that this item depends on. Use the id of the item to reference components and urls to reference other registries"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "type", "content"],
        "properties": {
          "path": {
            "type": "string",
            "description": "This is the path to the file in the project."
          },
          "content": {
            "type": "string",
            "description": "The content of the file"
          },
          "type": {
            "$ref": "#/definitions/RegistryItemType"
          },
          "indexFile": {
            "$ref": "#/definitions/IndexFile",
            "description": "Index file configuration with exports and imports"
          }
        },
        "additionalProperties": false
      },
      "description": "The main payload of the registry item. This is an array of files that are part of the registry item"
    },
    "panda": {
      "type": "object",
      "properties": {
        "config": {
          "type": "object",
          "properties": {
            "theme": {
              "$ref": "#/definitions/JsonValue",
              "description": "The theme configuration for the panda item"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "description": "The panda configuration for the registry item. This is an object with a config property."
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "The categories of the registry item. This is an array of strings"
    }
  },
  "additionalProperties": false
}
