{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Park UI Config",
  "type": "object",
  "required": ["framework", "paths"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "default": "https://next.park-ui.com/schema/park-ui-config.json"
    },
    "framework": {
      "type": "string",
      "enum": ["react", "solid", "vue", "svelte"]
    },
    "imports": {
      "type": "object",
      "properties": {
        "styled-system-base": {
          "type": "string"
        }
      }
    },
    "paths": {
      "type": "object",
      "required": ["components", "theme"],
      "properties": {
        "components": {
          "type": "string"
        },
        "theme": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
