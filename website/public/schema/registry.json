{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://park-ui.com/schema/registry.json",
  "title": "Park UI Registry",
  "description": "Schema for Park UI component registry",
  "type": "object",
  "required": ["$schema", "name", "homepage", "items"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "The JSON schema URL"
    },
    "name": {
      "type": "string",
      "description": "The name of the registry"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "The homepage URL of the registry"
    },
    "items": {
      "type": "array",
      "description": "Array of registry items",
      "items": {
        "$ref": "#/definitions/registryItem"
      }
    }
  },
  "definitions": {
    "registryItemType": {
      "type": "string",
      "enum": [
        "registry:block",
        "registry:color",
        "registry:component",
        "registry:recipe",
        "registry:theme",
        "registry:ui"
      ],
      "description": "The type of registry item"
    },
    "registryFile": {
      "type": "object",
      "required": ["type", "path"],
      "properties": {
        "type": {
          "$ref": "#/definitions/registryItemType"
        },
        "path": {
          "type": "string",
          "description": "The file path"
        },
        "content": {
          "type": "string",
          "description": "The file content"
        }
      }
    },
    "pandaExtension": {
      "type": "object",
      "properties": {
        "extension": {
          "description": "Panda CSS extension configuration"
        }
      }
    },
    "registryItem": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "$schema": {
          "type": "string",
          "format": "uri",
          "description": "Optional schema reference"
        },
        "name": {
          "type": "string",
          "description": "The name of the registry item"
        },
        "type": {
          "$ref": "#/definitions/registryItemType"
        },
        "categories": {
          "type": "array",
          "description": "Categories this item belongs to",
          "items": {
            "type": "string"
          }
        },
        "dependencies": {
          "type": "array",
          "description": "NPM dependencies required by this item",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string",
          "description": "A description of the registry item"
        },
        "devDependencies": {
          "type": "array",
          "description": "NPM dev dependencies required by this item",
          "items": {
            "type": "string"
          }
        },
        "panda": {
          "$ref": "#/definitions/pandaExtension",
          "description": "Panda CSS specific configuration"
        },
        "registryDependencies": {
          "type": "array",
          "description": "Other registry items this item depends on",
          "items": {
            "type": "string"
          }
        },
        "files": {
          "type": "array",
          "description": "Files included in this registry item",
          "items": {
            "$ref": "#/definitions/registryFile"
          }
        }
      }
    }
  }
}
