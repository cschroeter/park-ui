{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema version",
      "default": "https://park-ui.com/registry/latest/schema.json"
    },
    "jsFramework": {
      "type": "string",
      "enum": ["react", "solid", "vue"],
      "description": "The JavaScript framework to be used",
      "default": "react"
    },
    "outputPath": {
      "type": "string",
      "description": "The relative path from the project's root directory to the component's directory",
      "default": " ./src/components/ui"
    }
  },
  "required": ["jsFramework", "outputPath"],
  "additionalProperties": false
}
