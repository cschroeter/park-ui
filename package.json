{
  "name": "root",
  "type": "module",
  "private": true,
  "workspaces": [
    "components/*",
    "demo/*",
    "packages/*",
    "website"
  ],
  "scripts": {
    "postinstall": "lefthook install",
    "lint": "bun run --filter='*' lint",
    "test": "bun run --filter='*' test",
    "typecheck": "bun run --filter='*' typecheck",
    "react": "bun run --cwd components/react",
    "web": "bun run --cwd website"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@types/bun": "1.2.20",
    "lefthook": "1.12.2"
  },
  "trustedDependencies": [
    "@park-ui/styled-system"
  ]
}
