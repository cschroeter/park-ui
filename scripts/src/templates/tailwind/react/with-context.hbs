{{#each imports}}
{{{this}}}
{{/each}}
import { tv } from 'tailwind-variants'
import { createStyleContext } from '~/lib/create-style-context'

const styles = tv({{{tvConfig}}})
const { withProvider, withContext } = createStyleContext(styles)

{{#each parts}}
{{#if (eq @key "Root")}}
{{#if this.slot}}
const {{@key}} = withProvider({{this.component}}, '{{this.slot}}')
{{else}}
const {{@key}} = withProvider({{this.component}})
{{/if}} 
{{else}}
const {{@key}} = withContext({{this.component}}, '{{this.slot}}')
{{/if}}
{{/each}}


export {
  {{#each parts}}
  {{@key}}
  {{/each}}
}

