{{#each imports}}
{{{this}}}
{{/each}}
import type { ComponentProps } from 'react'
import { {{className}} } from 'styled-system/recipes'
import { styled } from 'styled-system/jsx'
import { createStyleContext } from '~/lib/create-style-context'

const { withProvider, withContext } = createStyleContext({{className}})

{{#each parts}}
{{#if (eq @key "Root")}}
{{#if this.slot}}
export const {{this.name}} = withProvider(styled({{this.component}}), '{{this.slot}}')
{{else}}
export const {{this.name}} = withProvider({{this.component}})
{{/if}} 
{{else}}
export const {{this.name}} = withContext(styled({{this.component}}), '{{this.slot}}')
{{/if}}
{{/each}}

export const {{this.name}} = {
  {{#each parts}}
    {{@key}} : {{this.name}},
  {{/each}}
}

{{#each parts}}
export interface {{this.name}}Props extends ComponentProps<typeof {{this.name}}> {}
{{/each}}
