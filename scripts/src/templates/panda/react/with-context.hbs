import type { ComponentProps } from 'react'
import { {{className}} } from 'styled-system/recipes'
import { styled } from 'styled-system/jsx'
import { createStyleContext } from '~/lib/create-style-context'

const { withProvider, withContext } = createStyleContext({{className}})

{{#each parts}}
{{#if (eq @key "Root")}}
{{#if this.slot}}
const {{@key}} = withProvider(styled({{this.component}}), '{{this.slot}}')
{{else}}
const {{@key}} = withProvider({{this.component}})
{{/if}} 
{{else}}
const {{@key}} = withContext(styled({{this.component}}), '{{this.slot}}')
{{/if}}
{{/each}}

export {
  {{#each parts}}
  {{@key}}
  {{/each}}
}

{{#each parts}}
export interface {{this.name}}Props extends ComponentProps<typeof {{@key}}> {}
{{/each}}
