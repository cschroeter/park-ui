{
  "git": {
    "commitMessage": "chore: release ${npm.name} v${version}",
    "tagName": "${npm.name}@${version}"
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "addUnreleased": true,
      "addVersionUrl": true,
      "filename": "CHANGELOG.md",
      "versionUrlFormats": {
        "repositoryUrl": "https://github.com/cschroeter/park-ui"
      }
    }
  },
  "hooks": {
    "before:init": ["pnpm build"]
  }
}
