{
  "name": "@park-ui/tailwind-plugin",
  "version": "0.17.0",
  "description": "Tailwind CSS plugin for Ark UI components",
  "keywords": [
    "Ark UI",
    "Tailwind CSS",
    "Plugin",
    "Park UI"
  ],
  "author": "Simon Holzmayer <dev@holzmayer.me>",
  "homepage": "https://park-ui.com",
  "license": "MIT",
  "repository": "https://github.com/cschroeter/park-ui",
  "bugs": {
    "url": "https://github.com/cschroeter/park-ui/issues"
  },
  "files": [
    "dist",
    "preset.css"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "release-it": "release-it",
    "build": "pnpm prebuild:plugin && pnpm build:plugin",
    "prebuild:plugin": "panda cssgen --outfile src/plugin/css/styles.css",
    "build:plugin": "tsx src/plugin/build.ts && tsup",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "tailwind-variants": "0.1.20",
    "ts-pattern": "5.0.6"
  },
  "devDependencies": {
    "@ark-ui/react": "1.3.0",
    "@pandacss/dev": "0.28.0",
    "@park-ui/panda-preset": "workspace:*",
    "@release-it/keep-a-changelog": "5.0.0",
    "@types/node": "20.11.6",
    "@types/postcss-js": "4.0.4",
    "clean-package": "2.2.0",
    "postcss": "8.4.33",
    "postcss-js": "4.0.1",
    "release-it": "17.0.3",
    "tailwindcss": "3.4.1",
    "tsup": "8.0.1",
    "tsx": "4.7.0"
  },
  "peerDependencies": {
    "tailwindcss": "3.x"
  },
  "clean-package": {
    "replace": {
      "main": "dist/index.js",
      "module": "dist/index.mjs",
      "types": "dist/index.d.ts",
      "exports": {
        ".": {
          "types": "./dist/index.d.ts",
          "import": "./dist/index.mjs",
          "require": "./dist/index.js"
        },
        "./package.json": "./package.json",
        "./preset.css": "./preset.css"
      }
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "clean": true,
    "dts": true,
    "sourcemap": true,
    "format": [
      "esm",
      "cjs"
    ]
  },
  "main": "src/index.ts"
}
