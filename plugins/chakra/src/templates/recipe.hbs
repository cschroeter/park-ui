import { defineStyle, defineStyleConfig } from '@chakra-ui/react'

export const {{pascalCase className}} = defineStyleConfig({
  baseStyle: defineStyle((props) => ({{{json base}}})),
  defaultProps: {
    {{#each defaultVariants as |variant|}}
      "{{@key}}": "{{variant}}",
    {{/each}}
  },
  sizes: {
    {{#each variants.size as |size|}}
      "{{@key}}": {{{json this}}},
    {{/each}}
  },
  variants: {
    {{#each variants.variant as |variant|}}
      "{{@key}}": defineStyle((props) => ({{{json this}}})),
    {{/each}}
  }
})