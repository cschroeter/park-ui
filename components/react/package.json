{
  "name": "@park-ui/react",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "panda codegen --clean --silent",
    "dev": "bun run storybook",
    "lint": "biome lint ./src",
    "storybook": "storybook dev -p 6006",
    "typecheck": "tsc",
    "registry:prepare": "scripts registry prepare --name @park-ui/react",
    "registry:build": "scripts registry build react",
    "typedoc": "scripts typedoc --out ../../website/public/types/react"
  },
  "exports": {
    "./examples": "./src/examples/index.ts",
    ".": "./src/components/ui/index.ts"
  },
  "dependencies": {
    "@ark-ui/react": "5.27.1",
    "lucide-react": "0.553.0"
  },
  "devDependencies": {
    "@pandacss/dev": "1.5.0",
    "@pandacss/preset-base": "1.5.0",
    "@pandacss/preset-panda": "1.5.0",
    "@park-ui/preset": "workspace:*",
    "@park-ui/scripts": "workspace:*",
    "@storybook/addon-a11y": "10.0.6",
    "@storybook/addon-themes": "10.0.6",
    "@storybook/react": "10.0.6",
    "@storybook/react-vite": "10.0.6",
    "@tanstack/react-virtual": "3.13.12",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.1.0",
    "lorem-ipsum": "2.0.8",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "storybook": "10.0.6",
    "typescript": "5.9.3",
    "vite": "7.2.2",
    "vite-tsconfig-paths": "5.1.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
