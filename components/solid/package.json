{
  "name": "@park-ui/solid",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "panda codegen --clean --silent",
    "dev": "bun run storybook",
    "lint": "biome lint ./src",
    "storybook": "storybook dev -p 6006",
    "typecheck": "tsc",
    "registry:prepare": "scripts registry prepare --name @park-ui/solid",
    "registry:build": "scripts registry build solid",
    "typedoc": "scripts typedoc --out ../../website/public/types/solid"
  },
  "dependencies": {
    "@ark-ui/solid": "5.29.1",
    "@tanstack/solid-virtual": "3.13.12",
    "lucide-solid": "0.554.0"
  },
  "devDependencies": {
    "@pandacss/dev": "1.5.1",
    "@pandacss/preset-base": "1.5.1",
    "@pandacss/preset-panda": "1.5.1",
    "@park-ui/preset": "workspace:*",
    "@park-ui/scripts": "workspace:*",
    "@storybook/addon-a11y": "10.0.8",
    "@storybook/addon-themes": "10.0.8",
    "lorem-ipsum": "2.0.8",
    "solid-js": "1.9.10",
    "storybook": "10.0.8",
    "storybook-solidjs-vite": "10.0.8",
    "typescript": "5.9.3",
    "vite": "7.2.4",
    "vite-plugin-solid": "2.11.10",
    "vite-tsconfig-paths": "5.1.4"
  },
  "peerDependencies": {
    "solid-js": ">=1.9.0"
  }
